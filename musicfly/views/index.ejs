
  <%- include('partials/header') -%>

    <div class="bg-image" style="background-image: url('/libs/blue.jpg'); height: 60vh; width: 100%; background-repeat:no-repeat;">

    </div>
    <h1>Recently Added Songs</h1>
      <div class="row">
        <div class="col">
          <% song.forEach((song) =>{ %>
            <div class="card">

                <div class="card-body">
                  <ul><h5><%= song.title %></h5></ul>
                  <ul><%= song.artist %></ul>
                  <ul><%= song.genre %></ul>
                  <ul><%= song.link %></ul>
                  <a class="btn btn-primary" href="/edit/<%= song._id %>">Edit</a>
                  <form style="display: inline;" action="/delete/<%= song._id %>?_method=DELETE" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                  </form>
              </div>
              </div>
        </div>
      </div>
      <% }) %>
      


